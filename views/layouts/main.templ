package layouts

import "github.com/mikeshawdev/contact-book-go-htmx/views/shared"

templ Main(pageName string, title string) {
	<!DOCTYPE html>
	<html lang="en">
		<head>
			<meta charset="utf-8">
			<meta http-equiv="X-UA-Compatible" content="IE=edge">
			<meta name="viewport" content="width=device-width, initial-scale=1.0">

			<title>{ title } - ContactBook</title>

			<link rel="apple-touch-icon" sizes="180x180" href="/assets/images/apple-touch-icon.png"/>
			<link rel="icon" type="image/png" sizes="32x32" href="/assets/images/favicon-32x32.png"/>
			<link rel="icon" type="image/png" sizes="16x16" href="/assets/images/favicon-16x16.png"/>

			<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flowbite@2.4.1/dist/flowbite.min.css" />
			<link rel="stylesheet" href="/assets/styles/main.css"/>

			<script src="https://cdn.jsdelivr.net/npm/flowbite@2.4.1/dist/flowbite.min.js" defer></script>
			<script src="https://unpkg.com/htmx.org" defer></script>
			<script src="/assets/scripts/main.js" defer></script>
		</head>
		<body hx-boost="true" class="antialiased">
			@shared.Navigation(pageName)

			<div class="max-w-screen-lg mx-auto px-4 py-8">
				{ children... }
			</div>
		</body>
	</html>
}
